<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- defining application context manually -->
    <bean id="xmlJdbcConnection" class="com.practice.spring.basic.xml.XMLJdbcConnection">
    </bean>

    <bean id="xmlPersonDAO" class="com.practice.spring.basic.xml.XMLPersonDAO">
        <property name="jdbcConnection" ref="xmlJdbcConnection" />
    </bean>

</beans>

